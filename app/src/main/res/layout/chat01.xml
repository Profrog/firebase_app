<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android= "http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/paster01">


    <TextView
        android:layout_width="match_parent"
        android:id = "@+id/title"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="채팅 창"
        android:textSize="30dp"
        android:background="#"
        android:textColor="#e84a5f"
        />

        <ScrollView
            android:id = "@+id/chat_scroll"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="6"
            android:scrollbars="vertical"
            android:fillViewport="true">


    <TextView
        android:id = "@+id/chat_contents"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:text = ""
        android:background="#ffffff"
        android:textColor="#e84a5f"
        />

        </ScrollView>

    <EditText
        android:id="@+id/enroll_data"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:inputType="textPersonName"
        android:textSize="15dp"
        android:hint="채팅 칠 내용"
        android:textColor="#00AFEC"
        android:background="#"

        />


        <Button
            android:id="@+id/okbutton1"
            android:layout_below= "@+id/enroll_data"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:text="채팅 올리기"
            android:onClick="clicksaving1"
            android:textColor="#00AFEC"
            android:background="#ffffff"
            />

</LinearLayout>