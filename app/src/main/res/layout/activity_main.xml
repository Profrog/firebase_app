<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android= "http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="마음만은 새내기 앱"
            android:textSize="25dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.022"
            />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/profile"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_gravity="right"
            android:text="프로필"
            android:onClick="profile"
            android:textSize="15dp" />

        <Button
            android:id="@+id/logout"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_gravity="right"
            android:text="로그아웃"
            android:onClick="logoutt"
            android:textSize="15dp" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp">

        <Button
            android:id = "@+id/image1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="스터디 방 만들기"
            android:onClick="click01"
            />

        <Button
            android:layout_marginTop="50dp"
            android:id = "@+id/image2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/image1"
            android:textSize="15dp"
            android:text="Sim"
            android:onClick="click02"
            />

        <Button
            android:layout_marginTop="50dp"
            android:id="@+id/image3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/image2"
            android:text="goalcheck"
            android:onClick="click03"
            android:textSize="15dp" />


        <Button
            android:layout_marginTop="50dp"
            android:id = "@+id/image4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/image3"
            android:textSize="15dp"
            android:onClick="click06"
            android:text="Focus Mode"
            />


        <Button
            android:layout_marginTop="50dp"
            android:id = "@+id/image5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/image4"
            android:textSize="15dp"
            android:onClick="click05"
            android:text="새로고침"
            />



        <TextView
            android:id = "@+id/showing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="string값 표시"
            android:textSize="20dp"
            android:layout_below="@id/image5"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.022"
            />




    </RelativeLayout>
</RelativeLayout>
